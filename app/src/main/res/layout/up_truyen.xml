<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_tt">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#32DFD1"
        android:weightSum="3">
        <ImageButton
            android:id="@+id/upT_cancel"
            android:layout_width="70dp"
            android:layout_marginTop="0dp"
            android:layout_height="70dp"
            android:background="@null"
            android:src="@drawable/ic_back"></ImageButton>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_marginBottom="40dp"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancingscript_semibold"
            android:textColor="#EED31934"
            android:text="Cập nhật thông tin"
            android:textSize="50dp"
            android:gravity="center_horizontal"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:background="@drawable/cus_list"
                android:layout_width="200dp"
                android:padding="10dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:id="@+id/Anht"
                android:src="@drawable/ic_nv"></ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <Button
                    android:background="@drawable/cus_btn"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Chọn ảnh"
                    android:id="@+id/CA_Truyen"/>
                <Button
                    android:background="@drawable/cus_nguoc"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Chụp ảnh"
                    android:id="@+id/CHA_Truyen"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:gravity="center"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/dancingscript_semibold"
                android:background="@drawable/cus_edt"
                android:padding="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/Tent"
                android:hint="Tên Truyện"/>
            <EditText
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/dancingscript_semibold"
                android:background="@drawable/cus_edt"
                android:padding="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/Tacgia"
                android:hint="Tác giả"/>
            <EditText
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/dancingscript_semibold"
                android:background="@drawable/cus_edt"
                android:padding="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/Nxb"
                android:hint="Nhà xuất bản"/>
            <EditText
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:fontFamily="@font/dancingscript_semibold"
                android:background="@drawable/cus_edt"
                android:padding="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/Theloai"
                android:hint="Thể loại"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
                <EditText
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dancingscript_semibold"
                    android:background="@drawable/cus_edt"
                    android:padding="10dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Soluong"
                    android:inputType="number"
                    android:hint="Số lượng"/>
                <EditText
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:fontFamily="@font/dancingscript_semibold"
                    android:background="@drawable/cus_edt"
                    android:padding="10dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Giaban"
                    android:inputType="number"
                    android:hint="Giá bán"></EditText>
    </LinearLayout>
    <EditText
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:fontFamily="@font/dancingscript_semibold"
        android:background="@drawable/cus_edt"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Noidung"
        android:hint="Nội dung truyện"
        />
    <Button
        android:background="@drawable/cus_btnthem"
        android:layout_width="150dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:id="@+id/S_Truyen"></Button>
</LinearLayout>