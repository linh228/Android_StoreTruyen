<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_tt">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#32DFD1">
        <ImageButton
            android:id="@+id/addT_cancel"
            android:layout_marginLeft="-15dp"
            android:layout_width="70dp"
            android:layout_marginTop="0dp"
            android:layout_height="70dp"
            android:background="@null"
            android:src="@drawable/ic_back"></ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp">
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancingscript_semibold"
            android:textColor="#EED31934"
            android:text="THÊM TRUYỆN"
            android:textSize="50dp"
            android:gravity="center_horizontal"
            android:layout_weight="1"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:id="@+id/add_Anht"
                android:src="@drawable/ic_kh"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:textColor="@color/white"
                    android:background="@drawable/cus_btnthem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Chọn ảnh"
                    android:id="@+id/add_CA_Truyen"/>
                <Button
                    android:textColor="@color/white"
                    android:background="@drawable/cus_btnthem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Chụp ảnh"
                    android:id="@+id/add_CHA_Truyen"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:textColor="@color/black"
                android:fontFamily="@font/dancingscript_semibold"
                android:textColorHint="@color/black"
                android:background="@drawable/cus_edt"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_Tent"
                android:hint="Tên Truyện"/>
            <EditText
                android:textColor="@color/black"
                android:fontFamily="@font/dancingscript_semibold"
                android:textColorHint="@color/black"
                android:layout_marginTop="6dp"
                android:background="@drawable/cus_edt"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_Tacgia"
                android:hint="Tác giả"/>
            <EditText
                android:textColor="@color/black"
                android:fontFamily="@font/dancingscript_semibold"
                android:textColorHint="@color/black"
                android:layout_marginTop="5dp"
                android:background="@drawable/cus_edt"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_Nxb"
                android:hint="Nhà xuất bản"/>
            <EditText
                android:textColor="@color/black"
                android:fontFamily="@font/dancingscript_semibold"
                android:textColorHint="@color/black"
                android:background="@drawable/cus_edt"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_Theloai"
                android:hint="Thể loại"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TableRow>
                <EditText
                    android:textColor="@color/black"
                    android:fontFamily="@font/dancingscript_semibold"
                    android:textColorHint="@color/black"
                    android:background="@drawable/cus_edt"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_Soluong"
                    android:layout_margin="20dp"
                    android:inputType="number"
                    android:hint="Số lượng"/>
                <EditText
                    android:textColor="@color/black"
                    android:fontFamily="@font/dancingscript_semibold"
                    android:textColorHint="@color/black"
                    android:background="@drawable/cus_edt"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:id="@+id/add_Giaban"
                    android:inputType="number"
                    android:hint="Giá bán"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <EditText
        android:fontFamily="@font/dancingscript_semibold"
        android:textColorHint="@color/black"
        android:background="@drawable/cus_edt"
        android:textColor="@color/black"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_Noidung"
        android:hint="Nội dung truyện"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">
        <Button
            android:background="@drawable/cus_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/add_S_Truyen"/>
        <Button
            android:textColor="@color/white"
            android:background="@drawable/cus_nguoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Làm mới"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/add_R_Truyen"/>
    </LinearLayout>
</LinearLayout>